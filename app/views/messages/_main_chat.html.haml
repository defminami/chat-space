.Chat-main
  .Right-header
    .Right-header__list
      .Right-header__list__Test
        = @group.name
      .Right-header__list__Member
        = @group.show_last_message
    .Right-header__list__Edit
      = link_to edit_group_path(@group), class: "Main-header__Right-header" do
        Edit
  .Messages
    = render @messages
        

  .Form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__input-box
        = f.text_field :content, class: 'Form__input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'Form__input-box__image' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'submit-btn'
